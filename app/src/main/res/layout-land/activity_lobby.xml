<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/game_bk"
        tools:ignore="MissingDefaultResource">

        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/title_activity_lobby"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:sCenterBottomTextSize="10sp"
            app:sRightBottomTextSize="13sp"
            app:sCenterTextString="游戏大厅"
            app:sDividerLineType="none"
            app:sCenterTextSize="15sp"
            app:sCenterTextColor="@color/black"
            app:sUseRipple="false"/>

        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev_games_activity_lobby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/left"/>

            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:id="@+id/game_cards_activity_lobby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="horizontal">

            </com.xuexiang.xui.widget.layout.XUILinearLayout>

            <ImageView
                android:id="@+id/next_games_activity_lobby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:src="@drawable/right"/>

        </com.xuexiang.xui.widget.layout.XUILinearLayout>

        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                android:id="@+id/create_game_activity_lobby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                style="@style/SuperButton.PigButton"
                android:text="创建房间"/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                android:id="@+id/join_game_activity_lobby"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="加入房间"
                style="@style/SuperButton.PigButton"/>
        </com.xuexiang.xui.widget.layout.XUILinearLayout>

    </com.xuexiang.xui.widget.layout.XUILinearLayout>

    <ImageView
        android:id="@+id/quit_account_activity_lobby"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:src="@drawable/quit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"/>
</com.xuexiang.xui.widget.layout.XUIRelativeLayout>
